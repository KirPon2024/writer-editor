{
  "schemaVersion": 1,
  "allowedPathGlobs": [
    "docs/OPS/**",
    "scripts/ops/**",
    "scripts/doctor.mjs",
    "test/contracts/**",
    "docs/OPERATIONS/**",
    "scripts/guards/**"
  ],
  "denyPathGlobs": [
    "src/**",
    ".github/**"
  ],
  "mergeMethod": "merge_only",
  "requiredRollup": "SUCCESS",
  "baseBranch": "main",
  "autoMergeAllowedIf": {
    "humanActionRequired": false
  },
  "handoff": {
    "contractRef": "AUTOMATION_HANDOFF_MINIMAL_CLICKS",
    "enforceResumeFromStep": true,
    "onHumanActionRequired": {
      "createPrAutomatically": true,
      "runChecksAutomatically": true,
      "blockMergeUntilClickConfirmation": true,
      "autoResumeFromStep": true
    }
  },
  "pushStep": {
    "entryCommand": "node scripts/ops/github-credential-autofix.mjs --json --resume-from-step STEP_08_PUSH",
    "triggerFailReason": "PUSH_BLOCKED_MISSING_WORKFLOW_SCOPE",
    "maxAutoRemediationAttempts": 3
  }
}

{
  "name": "craftsman",
  "version": "1.0.2",
  "description": "Бесплатный аскетичный редактор для писателей",
  "main": "src/main.js",
 "type": "commonjs",
  "scripts": {
    "prestart": "npm run build:renderer",
    "start": "electron .",
    "predev": "npm run build:renderer",
    "dev": "node -e \"const { existsSync } = require('node:fs'); const { execSync, spawnSync } = require('node:child_process'); if (!existsSync('dist/renderer/editor.bundle.js')) { execSync('node scripts/build-renderer.mjs',{stdio:'inherit'}); } const electron = require('electron'); const env = { ...process.env }; delete env.ELECTRON_RUN_AS_NODE; const result = spawnSync(electron, ['.', '--dev'], { stdio: 'inherit', env }); if (result.error) { console.error(result.error); process.exit(1); } const status = typeof result.status === 'number' ? result.status : 1; process.exit(status);\"",
    "build:renderer": "node scripts/build-renderer.mjs",
    "build:renderer:watch": "node scripts/build-renderer.mjs --watch",
    "test:ops": "npm run -s ops:current-wave",
    "test": "npm run -s test:ops && node scripts/run-tests.js",
    "test:electron": "node scripts/run-tests.js electron",
    "oss:policy": "node scripts/check-no-paid-tiptap.mjs",
    "ops:mvp-boundary": "node scripts/guards/ops-mvp-boundary.mjs",
    "ops:current-wave": "node scripts/guards/ops-current-wave-stop.mjs",
    "brain:status": "node scripts/brain.mjs status",
    "brain:handoff": "node scripts/brain.mjs handoff",
    "brain:log": "node scripts/brain.mjs log",
    "brain:new-task": "node scripts/brain.mjs new-task",
    "brain:savepoint": "node scripts/brain.mjs savepoint",
    "brain:refs": "node scripts/brain.mjs refs",
    "icons:mac": "bash scripts/make-mac-icon.sh",
    "build": "electron-builder",
    "build:mac": "electron-builder --mac",
    "build:win": "electron-builder --win",
    "build:linux": "electron-builder --linux"
  },
  "keywords": ["editor", "writer", "text"],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "@tiptap/core": "2.27.2",
    "@tiptap/pm": "2.27.2",
    "@tiptap/starter-kit": "2.27.2"
  },
  "devDependencies": {
    "electron": "^28.0.0",
    "electron-builder": "^24.0.0",
    "esbuild": "^0.20.2"
  },
  "build": {
    "appId": "com.craftsman.app",
    "productName": "Craftsman",
    "icon": "build/icon.png",
    "mac": {
      "category": "public.app-category.productivity",
      "icon": "build/icon.icns"
    }
  }
}

      "RETRYABLE_FAIL",
      "HUMAN_REQUIRED"
    ],
    "deleteOn": [
      "MERGE_SUCCESS"
    ]
  },
  "cachePolicy": {
    "cacheRoot": "docs/OPS/CACHE/",
    "rule": "EPHEMERAL_ONLY",
    "stagedCacheIsBlockFail": true
  },
  "prPolicy": {
    "prBodyMode": "--body-file only",
    "requiredChecksWait": {
      "pollSeconds": 20,
      "timeoutSeconds": 600,
      "onTimeout": "HUMAN_REQUIRED"
    },
    "branchProtection": "HUMAN_REQUIRED until satisfied"
  },
  "antiSwapPolicy": {
    "alwaysBlockingForMerge": true
  }

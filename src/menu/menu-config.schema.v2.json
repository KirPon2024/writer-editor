{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "craftsman://menu/menu-config.schema.v2.json",
  "title": "Craftsman Menu Config v2",
  "type": "object",
  "required": ["version", "fonts", "menus"],
  "additionalProperties": false,
  "properties": {
    "version": {
      "const": "v2"
    },
    "fonts": {
      "type": "array",
      "minItems": 1,
      "items": {
        "$ref": "#/$defs/font"
      }
    },
    "menus": {
      "type": "array",
      "minItems": 1,
      "items": {
        "$ref": "#/$defs/menuNode"
      }
    }
  },
  "$defs": {
    "font": {
      "type": "object",
      "required": ["label", "value"],
      "additionalProperties": false,
      "properties": {
        "id": {
          "type": "string",
          "minLength": 1
        },
        "label": {
          "type": "string",
          "minLength": 1
        },
        "value": {
          "type": "string",
          "minLength": 1
        }
      }
    },
    "enabledWhenNode": {
      "oneOf": [
        { "$ref": "#/$defs/enabledWhenAll" },
        { "$ref": "#/$defs/enabledWhenAny" },
        { "$ref": "#/$defs/enabledWhenNot" },
        { "$ref": "#/$defs/enabledWhenEq" },
        { "$ref": "#/$defs/enabledWhenNeq" },
        { "$ref": "#/$defs/enabledWhenIn" },
        { "$ref": "#/$defs/enabledWhenFlag" },
        { "$ref": "#/$defs/enabledWhenModeIs" },
        { "$ref": "#/$defs/enabledWhenProfileIs" },
        { "$ref": "#/$defs/enabledWhenPlatformIs" },
        { "$ref": "#/$defs/enabledWhenStageGte" }
      ]
    },
    "enabledWhenAll": {
      "type": "object",
      "required": ["op", "args"],
      "additionalProperties": false,
      "properties": {
        "op": { "const": "all" },
        "args": {
          "type": "array",
          "items": { "$ref": "#/$defs/enabledWhenNode" }
        }
      }
    },
    "enabledWhenAny": {
      "type": "object",
      "required": ["op", "args"],
      "additionalProperties": false,
      "properties": {
        "op": { "const": "any" },
        "args": {
          "type": "array",
          "items": { "$ref": "#/$defs/enabledWhenNode" }
        }
      }
    },
    "enabledWhenNot": {
      "type": "object",
      "required": ["op", "arg"],
      "additionalProperties": false,
      "properties": {
        "op": { "const": "not" },
        "arg": { "$ref": "#/$defs/enabledWhenNode" }
      }
    },
    "enabledWhenEq": {
      "type": "object",
      "required": ["op", "left", "right"],
      "additionalProperties": false,
      "properties": {
        "op": { "const": "eq" },
        "left": {
          "type": "string",
          "enum": ["mode", "profile", "platform", "stage", "hasDocument", "selectionExists", "flowModeActive"]
        },
        "right": {}
      }
    },
    "enabledWhenNeq": {
      "type": "object",
      "required": ["op", "left", "right"],
      "additionalProperties": false,
      "properties": {
        "op": { "const": "neq" },
        "left": {
          "type": "string",
          "enum": ["mode", "profile", "platform", "stage", "hasDocument", "selectionExists", "flowModeActive"]
        },
        "right": {}
      }
    },
    "enabledWhenIn": {
      "type": "object",
      "required": ["op", "left", "right"],
      "additionalProperties": false,
      "properties": {
        "op": { "const": "in" },
        "left": {
          "type": "string",
          "enum": ["mode", "profile", "platform", "stage", "hasDocument", "selectionExists", "flowModeActive"]
        },
        "right": {
          "type": "array",
          "minItems": 1,
          "items": {}
        }
      }
    },
    "enabledWhenFlag": {
      "type": "object",
      "required": ["op", "name"],
      "additionalProperties": false,
      "properties": {
        "op": { "const": "flag" },
        "name": {
          "type": "string",
          "enum": ["mode", "profile", "platform", "stage", "hasDocument", "selectionExists", "flowModeActive"]
        }
      }
    },
    "enabledWhenModeIs": {
      "type": "object",
      "required": ["op", "value"],
      "additionalProperties": false,
      "properties": {
        "op": { "const": "modeIs" },
        "value": {
          "type": "string",
          "enum": ["Write", "Plan", "Review"]
        }
      }
    },
    "enabledWhenProfileIs": {
      "type": "object",
      "required": ["op", "value"],
      "additionalProperties": false,
      "properties": {
        "op": { "const": "profileIs" },
        "value": {
          "type": "string",
          "enum": ["Minimal", "Pro", "Guru"]
        }
      }
    },
    "enabledWhenPlatformIs": {
      "type": "object",
      "required": ["op", "value"],
      "additionalProperties": false,
      "properties": {
        "op": { "const": "platformIs" },
        "value": {
          "type": "string",
          "enum": ["mac", "win", "linux", "web", "android", "ios"]
        }
      }
    },
    "enabledWhenStageGte": {
      "type": "object",
      "required": ["op", "value"],
      "additionalProperties": false,
      "properties": {
        "op": { "const": "stageGte" },
        "value": {
          "type": "string",
          "enum": ["X0", "X1", "X2", "X3", "X4"]
        }
      }
    },
    "menuNode": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "id": {
          "type": "string",
          "minLength": 1
        },
        "type": {
          "const": "separator"
        },
        "label": {
          "type": "string",
          "minLength": 1
        },
        "role": {
          "type": "string",
          "enum": ["undo", "redo", "cut", "copy", "paste", "selectAll"]
        },
        "accelerator": {
          "type": "string",
          "minLength": 1
        },
        "actionId": {
          "type": "string",
          "pattern": "^[a-z][a-zA-Z0-9]*$"
        },
        "command": {
          "type": "string",
          "pattern": "^cmd\\.[a-z][a-zA-Z0-9._-]*$"
        },
        "actionArg": {},
        "enabled": {
          "type": "boolean"
        },
        "visible": {
          "type": "boolean"
        },
        "enabledWhen": {
          "$ref": "#/$defs/enabledWhenNode"
        },
        "mode": {
          "type": "array",
          "minItems": 1,
          "uniqueItems": true,
          "items": {
            "type": "string",
            "enum": ["offline", "web_subset"]
          }
        },
        "profile": {
          "type": "array",
          "minItems": 1,
          "uniqueItems": true,
          "items": {
            "type": "string",
            "enum": ["minimal", "pro", "guru"]
          }
        },
        "stage": {
          "type": "array",
          "minItems": 1,
          "uniqueItems": true,
          "items": {
            "type": "string",
            "enum": ["X0", "X1", "X2", "X3", "X4"]
          }
        },
        "submenuFrom": {
          "type": "string",
          "enum": ["fonts"]
        },
        "items": {
          "type": "array",
          "items": {
            "$ref": "#/$defs/menuNode"
          }
        }
      },
      "oneOf": [
        {
          "type": "object",
          "required": ["type"]
        },
        {
          "type": "object",
          "required": ["role"]
        },
        {
          "type": "object",
          "required": ["label"]
        }
      ]
    }
  }
}
